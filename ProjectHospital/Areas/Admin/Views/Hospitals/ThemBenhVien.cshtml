@{
    ViewBag.Title = "ThemBenhVien";
    Layout = "~/Areas/Admin/Views/Shared/_MasterLayout.cshtml";
}

<!-- Breadcrumb -->
<!-- Page Title -->
<div class="row no-margin-padding">
    <div class="col-md-6">
        <h3 class="block-title">Thêm bệnh viện</h3>
    </div>
    <div class="col-md-6">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">
                    <span class="ti-home"></span>
                </a>
            </li>
            <li class="breadcrumb-item">Bệnh viện</li>
            <li class="breadcrumb-item active">Thêm bệnh viện</li>
        </ol>
    </div>
</div>
<!-- /Page Title -->
<!-- /Breadcrumb -->
<!-- Main Content -->
<div class="container-fluid">

    <div class="row">
        <!-- Widget Item -->
        <div class="col-md-12">
            <div class="widget-area-2 proclinic-box-shadow">
                <h3 class="widget-title">Thêm bệnh viện</h3>
                <form action="@Url.Action("ThemBenhVien", "Hospitals", new { area = "Admin" })" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Doctor-name">Tên bệnh viện</label>
                            <input type="text" name="tenbenhvien" class="form-control" placeholder="Tên bệnh viện" id="Doctor-name" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="specialization">Chuyên về</label>
                            <input type="text" name="chuyenve" placeholder="Chuyên về" class="form-control" id="specialization" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="phone">Số điện thoại</label>
                            <input type="text" name="sdt" placeholder="Số điện thoại" class="form-control" id="phone" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="address">Địa chỉ</label>
                            <textarea name="diachi" placeholder="Địa chỉ" class="form-control" id="address" rows="3" required></textarea>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="file">Ảnh bệnh viện</label>
                            <input type="file" name="anhbenhvien" class="form-control" id="file" required>
                        </div>

                        <div class="form-check col-md-12 mb-2">
                            <div class="text-left">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" type="checkbox" id="ex-check-2" required>
                                    <label class="custom-control-label" for="ex-check-2">Please Confirm</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Gửi</button>
                        </div>
                    </div>
                </form>
                <!-- Alerts-->
                <div class="alert alert-success alert-dismissible fade show" role="alert" style="display:none;">
                    <strong>Successfully Done!</strong> Please Check in the hospitals list
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="alert alert-warning alert-dismissible fade show" role="alert" style="display:none;">
                    <strong>Holy guacamole!</strong> You should check in on some of those fields below.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!-- /Alerts-->
            </div>
        </div>
        <!-- /Widget Item -->
    </div>
</div>
<!-- /Main Content -->
