
@{
    ViewBag.Title = "ThemBenhNhan";
    Layout = "~/Areas/Admin/Views/Shared/_MasterLayout.cshtml";
}

<!-- Page Title -->
<div class="row no-margin-padding">
    <div class="col-md-6">
        <h3 class="block-title">Thêm Bệnh nhân</h3>
    </div>
    <div class="col-md-6">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">
                    <span class="ti-home"></span>
                </a>
            </li>
            <li class="breadcrumb-item">Bệnh nhân</li>
            <li class="breadcrumb-item active">Thêm Bệnh nhân</li>
        </ol>
    </div>
</div>
<!-- /Page Title -->
<!-- Main Content -->
<div class="container-fluid">

    <div class="row">
        <!-- Widget Item -->
        <div class="col-md-12">
            <div class="widget-area-2 proclinic-box-shadow">
                <h3 class="widget-title">Thêm bệnh nhân</h3>
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="patient-name">Tên bệnh nhân</label>
                            <input type="text" class="form-control" placeholder="Tên bệnh nhân" id="patient-name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="dob">Ngày sinh</label>
                            <input type="date" placeholder="Ngày sinh" class="form-control" id="dob">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="email">SỐ dư</label>
                            <input type="email" placeholder="Số dư" class="form-control" id="Email">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="gender">Giới tính</label>
                            <select class="form-control" id="gender">
                                <option>Nam</option>
                                <option>Nữ</option>
                                <option>Khác</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="patient-name">Lịch sử bệnh</label>
                            <input type="text" class="form-control" placeholder="Tên bệnh nhân" id="patient-name">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="exampleFormControlTextarea1">Địa chỉ</label>
                            <textarea placeholder="Địa chỉ" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="file">File</label>
                            <input type="file" class="form-control" id="file">
                        </div>

                        <div class="form-check col-md-12 mb-2">
                            <div class="text-left">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" type="checkbox" id="ex-check-2">
                                    <label class="custom-control-label" for="ex-check-2">Vui lòng xác nhận</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Gửi</button>
                        </div>
                    </div>
                </form>
                <!-- Alerts-->
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Successfully Done!</strong> Please add payment now
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Holy guacamole!</strong> You should check in on some of those fields below.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!-- /Alerts-->
            </div>
        </div>
        <!-- /Widget Item -->
    </div>
</div>
<!-- /Main Content -->