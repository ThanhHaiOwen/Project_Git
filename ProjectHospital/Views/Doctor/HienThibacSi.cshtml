
@{
    ViewBag.Title = "HienThibacSi";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


<div class="container-fluid" style="padding: 170px">
    <div class="row">
        <div class="col-md-12">
            <div class="widget-area-2 proclinic-box-shadow">
                <h3 class="widget-title" style="padding-bottom:20px">Chỉnh sửa thông tin bác sĩ</h3>
                <form action="~/Doctor/UpdateProfileBS" method="post" enctype="multipart/form-data">
                    <!-- ID bác sĩ ẩn -->
                    <input type="hidden" name="id" value="@ViewBag.listBS[0][0]" />

                    <div class="form-row">
                        <!-- Tên bác sĩ -->
                        <div class="form-group col-md-6">
                            <label for="Doctor-name">Tên bác sĩ</label>
                            <input type="text" class="form-control" id="Doctor-name" name="HoTen"
                                   placeholder="Tên bác sĩ" value="@ViewBag.listBS[0][1]" required>
                        </div>

                        <!-- Ngày sinh -->
                        <div class="form-group col-md-6">
                            <label for="dob">Ngày sinh</label>
                            <input type="date" class="form-control" id="dob" name="NgaySinh"
                                   placeholder="Ngày sinh" value="@ViewBag.listBS[0][2]" required>
                        </div>

                        <!-- Chuyên khoa -->
                        <div class="form-group col-md-6">
                            <label for="specialization">Chuyên khoa</label>
                            <select class="form-control" name="MaKhoa" id="specialization">
                                @foreach (var b in ViewBag.listK)
                                {
                                    <option value="@b[0]">@b[1]</option>
                                }
                            </select>
                        </div>

                        <!-- Bệnh viện -->
                        <div class="form-group col-md-6">
                            <label for="hospital">Bệnh viện</label>
                            <select class="form-control" name="MaBV" id="hospital">
                                @foreach (var c in ViewBag.listBV)
                                {
                                    <option value="@c[0]">@c[1]</option>
                                }
                            </select>
                        </div>

                        <!-- Phí khám bệnh -->
                        <div class="form-group col-md-6">
                            <label for="fee">Phí khám bệnh</label>
                            <select class="form-control" name="maphikham" id="fee">
                                @foreach (var d in ViewBag.listphikham)
                                {
                                    <option value="@d[0]">@d[1]</option>
                                }
                            </select>
                        </div>

                        <!-- Năm kinh nghiệm -->
                        <div class="form-group col-md-6">
                            <label for="experience">Năm kinh nghiệm</label>
                            <input type="number" class="form-control" id="experience" name="NamKinhNghiem"
                                   placeholder="Năm kinh nghiệm" value="@ViewBag.listBS[0][3]" required>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="form-group col-md-6">
                            <label for="password">Mật khẩu</label>
                            <input type="password" class="form-control" id="password" name="matkhau"
                                   placeholder="Mật khẩu" value="@ViewBag.listBS[0][9]" required>
                        </div>

                        <!-- Ảnh đại diện -->
                        <div class="form-group col-md-6">
                            <label for="file">Ảnh đại diện</label>
                            <input type="file" class="form-control" id="file" name="AnhBacSi">
                        </div>

                        <!-- Checkbox xác nhận -->
                        <div class="form-check col-md-12 mb-2">
                            <input type="checkbox" class="form-check-input" id="confirm" required>
                            <label class="form-check-label" for="confirm">Hãy xác nhận thông tin</label>
                        </div>

                        <!-- Nút xác nhận -->
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary btn-lg">Xác nhận</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>